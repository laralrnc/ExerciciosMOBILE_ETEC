<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Escolha uma categoria"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#Ffffff"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/opcoes"
        style="@style/AppBaseTheme"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btcontinuar"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginBottom="132dp"
        android:layout_marginRight="67dp"
        android:orientation="horizontal"
        android:shadowColor="#ffffff"
        android:shadowDx="1.8"
        android:shadowDy="1.8"
        android:shadowRadius="1.8"
         android:textColor="#Ffffff" />

    <Button
        android:id="@+id/btcontinuar"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="25dp"
        android:text="Continuar"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btsair"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btcontinuar"
        android:layout_alignBottom="@+id/btcontinuar"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="18dp"
        android:text="Sair"
        android:textColor="#ffffff" />

</RelativeLayout>
