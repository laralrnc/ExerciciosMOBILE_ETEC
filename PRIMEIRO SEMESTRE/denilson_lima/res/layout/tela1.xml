<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/est"
    android:gravity="center_horizontal"
     >

    <Spinner
        android:id="@+id/opcoes"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
	       android:text=""
	       android:textColor="#FF0000"
	       android:shadowRadius="1.8"
	       android:shadowDx="1.8"
	       android:shadowDy="1.8"
	       android:shadowColor="#ffffff" />

    <Button
        android:id="@+id/btcontinuar"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="Continuar"
        android:textColor="#000064" />

    <Button
        android:id="@+id/btsair"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:text="Sair"
        android:textColor="#000064" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Escolha uma categoria"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF7F00"
        android:textSize="30sp" />

</RelativeLayout>
